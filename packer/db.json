{
    "variables": {
        "proj_id": null,
        "source_image": null,
        "machine_type": "f1-micro",
        "image_family": "reddit-db-base"
    },
    "builders": [{
        "type": "googlecompute",
        "project_id": "{{user `proj_id`}}",
        "image_name": "reddit-db-base-{{timestamp}}",
        "image_family": "{{user `image_family`}}",
        "instance_name": "reddit-app",
        "source_image": "{{user `source_image`}}",
        "zone": "europe-west1-b",
        "tags": ["ssh", "reddit-db"],
        "ssh_username": "appuser",
        "machine_type": "{{user `machine_type`}}",
        "image_description": "Image for reddit app based on {{user `source_image`}} with MongoDB 3.2",
        "disk_type": "pd-standard",
        "disk_size": "10",
        "network": "default"
    }],
    "provisioners": [{
        "type": "ansible",
        "groups": ["reddit-db"],
        "playbook_file": "../ansible/db.yml"
    }]
}